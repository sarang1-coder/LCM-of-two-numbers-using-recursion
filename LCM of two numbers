#include<stdio.h>
int find_lcm(int,int);
int main()
{
	int i,j,lcm;
	printf("Enter three number:");
	scanf("%d%d",&i,&j);
	lcm=find_lcm(i,j);
	printf("LCM of %d and %d is:%d",i,j,lcm);
	return 0;
}
int find_lcm(int a,int b)
{
	 static int temp = 1;    
    if(temp%a == 0 && temp%b == 0)
    {
        return temp;
    }
    else
    {
        temp++;
        find_lcm(a,b);
        return temp;
    } 
}
